<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/busfondo"
        android:elevation="10dip"
        tools:context=".RegisterActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="311dp"
            android:layout_height="698dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:elevation="10dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Registrarse"
                    android:textColor="#024A44"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etMatriculaRegis"
                    android:layout_width="178dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/switch1"
                    android:layout_alignStart="@+id/switch1"
                    android:layout_alignEnd="@+id/switch1"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/register"
                    android:ems="10"
                    android:hint="Matricula"
                    android:inputType="textShortMessage"
                    android:paddingStart="5dp"
                    android:textColor="#5f9ea0"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/etTelefonoRegis"
                    android:layout_width="260dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/textView34"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/register"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingStart="5dp"
                    android:textColor="#5f9ea0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Nombre:"
                    android:textColor="#024A44"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etNombreRegis"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Apellidos:"
                    android:textColor="#024A44"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNombreRegis"
                    android:layout_width="260dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/textView11"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/register"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:paddingStart="5dp"
                    android:textColor="#5f9ea0"
                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/etApellidosRegis"
                    android:layout_width="260dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/textView24"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/register"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:paddingStart="5dp"
                    android:textColor="#5f9ea0"
                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etApellidosRegis"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Correo:"
                    android:textColor="#024A44"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etMailRegis"
                    android:layout_width="260dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/textView12"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/register"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:paddingStart="5dp"
                    android:textColor="#5f9ea0"
                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_below="@+id/etMailRegis"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Contraseña:"
                    android:textColor="#024A44"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etPassRegis"
                    android:layout_width="260dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/textView14"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/register"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingStart="5dp"
                    android:textColor="#5f9ea0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_below="@+id/etPassRegis"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Confirmar contraseña:"
                    android:textColor="#024A44"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etConfPassRegis"
                    android:layout_width="260dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/textView15"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/register"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingStart="5dp"
                    android:textColor="#5f9ea0"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_below="@+id/etConfPassRegis"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Edad:"
                    android:textColor="#024A44"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_below="@+id/etEdadRegis"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Telefono:"
                    android:textColor="#024A44"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etEdadRegis"
                    android:layout_width="260dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/textView16"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/register"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingStart="5dp"
                    android:textColor="#5f9ea0"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnRegistro"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="97dp"
                    android:layout_marginEnd="90dp"
                    android:layout_marginBottom="15dp"
                    android:backgroundTint="#5f9ea0"
                    android:fontFamily="@font/abel"
                    android:text="Regístrate"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etTelefonoRegis"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:onClick="onclick"
                    android:text="¿Es autobusero?"
                    android:textColor="#024A44"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>