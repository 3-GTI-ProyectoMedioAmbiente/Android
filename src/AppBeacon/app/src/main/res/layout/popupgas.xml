<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:background="@color/gris"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/white"
        android:textStyle="bold">

    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="229dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/abel"
            android:gravity="center"
            android:text="Leyenda mapa"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="46dp"
            android:layout_height="32dp"
            android:layout_below="@+id/textView13"
            android:layout_marginStart="20dp"
            android:layout_marginTop="37dp"
            app:srcCompat="@drawable/verde" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="227dp"
            android:layout_height="48dp"
            android:layout_below="@+id/textView13"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/imageView7"
            android:fontFamily="@font/abel"
            android:text="El nivel no es perjudicial para la salud."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="46dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imageView7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/amarillo" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="227dp"
            android:layout_height="48dp"
            android:layout_below="@+id/textView19"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/imageView9"
            android:fontFamily="@font/abel"
            android:text="Nivel que se acerca al límite recomendable."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="73dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imageView9"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="46dp"
            app:srcCompat="@drawable/neon" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="223dp"
            android:layout_height="59dp"
            android:layout_below="@+id/textView20"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/imageView10"
            android:fontFamily="@font/abel"
            android:text="Niveles que sobrepasan el límite recomendado. Perjudicial para la salud."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>