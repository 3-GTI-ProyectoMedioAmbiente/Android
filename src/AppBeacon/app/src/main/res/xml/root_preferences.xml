<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header"
        app:iconSpaceReserved="false">


        <EditTextPreference
            android:enabled="false"
            app:defaultValue="@string/modeloSensorDefault"
            app:enabled="true"
            app:key="keyModeloDispositivo"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>

        <EditTextPreference
            android:enabled="false"
            app:enabled="true"
            app:defaultValue="@string/macSensorDefault"
            app:key="keyMacDispositivo"
            app:title="@string/reply_title"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title"
            app:iconSpaceReserved="false"/>

        <SeekBarPreference
            android:key="pref_gasNoPerjudicial"
            app:key="seekBarContaminacionBuena"
            app:title="@string/limite_gas_no_perjudicial_header"
            app:iconSpaceReserved="false"
            android:max="50"
            app:summary="Modifica el valor a partir del cual se considera un gas no perjudicial"
            app:showSeekBarValue="true"
            />
        <SeekBarPreference
            android:key="pref_gasPerjudicial"
            app:key="seekBarContaminacion"
            app:title="@string/limite_gas_perjudicial_header"
            app:iconSpaceReserved="false"
            android:max="50"
            app:summary="Modifica el valor a partir del cual se considera un gas perjudicial"
            app:showSeekBarValue="true"
            />

    </PreferenceCategory>

</PreferenceScreen>